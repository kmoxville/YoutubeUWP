<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <AcrylicBrush x:Key="TopBarBackgroundColor"
                BackgroundSource="Backdrop"
                TintColor="Red"
                TintOpacity="0.7"
                FallbackColor="Red"/>

    <AcrylicBrush x:Key="NavPanelBackgroundColor"
                BackgroundSource="Backdrop"
                TintColor="White"
                TintOpacity="0.5"
                FallbackColor="White"/>

    <AcrylicBrush x:Key="RefreshButtonColor"
                  BackgroundSource="Backdrop"
                  TintColor="#FF00AEFF"
                  TintOpacity="0.5"
                  FallbackColor="#FF00AEFF"/>

    <SolidColorBrush x:Key="TopBarTextColor" 
                                Color="White"/>
    <SolidColorBrush x:Key="NavViewFontIconColor"
                                Color="#FF888888"/>
    <SolidColorBrush x:Key="NavViewTextColor"
                                Color="Black"/>
  
</ResourceDictionary>
